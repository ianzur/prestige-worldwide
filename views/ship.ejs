<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="wnameth=device-wnameth, initial-scale=1, shrink-to-fit=no">
    
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <title>Ship a package</title>
</head>
<body>
<div class="container" style="padding-top: 15px;">

    <!-- Welcome Banner -->
    <div class="d-flex justify-content-between">
        <h1>Welcome, <%= user.name.first %>!</h1>
        <div class="col align-self-top col-sm-1">
            <a href="/logout" class="btn btn-outline-secondary btn-sm" type="button">log-out</a>
        </div>
    </div>

    <!-- navigation tabs -->
    <ul class="nav nav-tabs nav-fill">
        <li class="nav-item">
            <a class="nav-link " href="/profile">My Account</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="/ship" style="background-color:#E9ECEF;"><strong>Ship Package</strong></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/track">Track Package</a>
        </li>
    </ul>

    <div class="row">

        <!-- USER INFORMATION -->
        <div class="col-sm-12">
            <div class="jumbotron">
                <h3>Please fill the following fields to ship a package.</h3>
                <br>
                <!-- display any error messages, if they exist -->
                <% if(locals.messages.error) { %>
                    <% for(var i=0; i < locals.messages.error.length; i++) { %>
                    <div class="alert alert-danger" role="alert">
                        <strong><%=locals.messages.error[i]%></strong>
                    </div>
                    <% } %>
                <% } %>

                <!-- display any success messages, if they exist -->
                <% if(locals.messages.success) { %>
                    <% for(var i=0; i < locals.messages.success.length; i++) { %>
                    <div class="alert alert-success" role="alert">
                        <strong><%=locals.messages.success[i]%></strong>
                    </div>
                    <% } %>
                <% } %>
                <br>
                <!--  from address -->
                <h5>Where are you shipping from?</h5>
                <form action="/ship" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" value="<%= user.fullName %>" name="nameFrom" placeholder="e.g. 'John Smith'" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" value="<%= user.email %>" name="emailFrom" placeholder="e.g. 'ex@mple.com'" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="phone">Phone</label>
                            <input type="tel" class="form-control" value="<%= user.readablePhone %>" name="phoneFrom" placeholder="'469-666-3456'" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress">Address</label>
                        <input type="text" class="form-control" value="123 Main St." name="addressFrom" placeholder="1234 Main St. " required>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress2">Address 2</label>
                        <input type="text" class="form-control" value="Apt. #3" name="address2From" placeholder="Apartment, studio, or floor">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputCity">City</label>
                            <input type="text" class="form-control" value="Dallas" name="cityFrom" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputState">State | Province</label>
                            <input type="text" class="form-control" value="TX" name="stateFrom" required>
                        <!-- future: select state or province From list -->
                        <!-- <select name="inputState" class="form-control">
                            <option selected>Choose...</option>
                            <option>...</option>
                        </select> -->
                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputZip">Postal Code</label>
                            <input type="text" class="form-control" value="76207" name="zipFrom" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <label for=countryFrom>Country</label>
                        <select class="form-control" name=countryFrom>
                            <option>United States</option>
                            <option>Spain</option>
                        </select>
                    </div>
                    
                    <hr>
                    <br>   
                    
                    <!-- To address -->
                    <h5>Where are you shipping to?</h5>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" value="Reciptiant" name="nameTo" placeholder="e.g. 'John Smith'">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" value="test@test.com" name="emailTo" placeholder="e.g. 'ex@mple.com'" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="phone">Phone</label>
                            <input type="tel" class="form-control" value="123-456-7890" name="phoneTo" placeholder="'469-666-3456' or '3336669999'" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress">Address</label>
                        <input type="text" class="form-control" value="123 Main St." name="addressTo" placeholder="1234 Main St. " required>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress2">Address 2</label>
                        <input type="text" class="form-control" value="Apt. #1" name="address2To" placeholder="Apartment, studio, or floor">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputCity">City</label>
                            <input type="text" class="form-control" value="Denton" name="cityTo" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputState">State | Province</label>
                            <input type="text" class="form-control" value="Texas" name="stateTo" required>
                        <!-- future: select state or province To list -->
                        <!-- <select name="inputState" class="form-control">
                            <option selected>Choose...</option>
                            <option>...</option>
                        </select> -->
                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputZip">Postal Code</label>
                            <input type="text" class="form-control" value="75032" name="zipTo" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <label for=countryTo>Country</label>
                        <select class="form-control" name=countryTo>
                            <option>United States</option>
                            <option>Spain</option>
                        </select>
                    </div>
                    <hr>
                
                    <!-- Package information -->
                    <h5>What kind of packaging are you using?</h5>
                    <div class="form-row">
                        <div class="form-group col-md">
                            <label for="weight">weight</label>
                            <input type="text" class="form-control" name="weight" placeholder="lbs">
                        </div>
                        <div class="form-group col-md">
                            <label for="email">width</label>
                            <input type="text" class="form-control" name="width" placeholder="inches">
                        </div>
                        <div class="form-group col-md">
                            <label for="length">length</label>
                            <input type="text" class="form-control" name="length" placeholder="inches">
                        </div>
                        <div class="form-group col-md">
                            <label for="height">height</label>
                            <input type="text" class="form-control" name="height" placeholder="inches">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="gridCheck">
                            <label class="form-check-label" for="gridCheck">Require Recipiant Signature?</label>
                        </div>
                    </div>
                    <label for="value">Declared Value</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input type="text" class="form-control" name="value" id="value" aria-label="Amount (to the nearest dollar)">
                        <div class="input-group-append">
                            <span class="input-group-text">.00</span>
                        </div>
                    </div>
                    <hr>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">submit</button>
                            <a type="button" class="btn btn-secondary" href="/ship">clear</a>
                        </div>
                    </div>
                </form>
                <hr>
            </div>
        </div>
    </div>

    <div class="text-right">
        <pre>
            CSCE 5350 - Database Systems Project
            Ian Zurutuza + Sheetal Khatri
        </pre>
    </div>

</div>
</body>
</html>
